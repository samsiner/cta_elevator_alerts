<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- activity styles -->
    <style name="ActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">30dp</item>
    </style>

    <!-- font styles -->
    <style name="TitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SubHeaderText" parent="TitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="FavoriteNickname">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="StationName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="StationAlertRegular">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StationAlertBold" parent="StationAlertRegular">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- image styles -->
    <style name="StatusImage">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="trainIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="rightArrow">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/right_arrow</item>
    </style>

    <!-- line color bar -->
    <style name="LineBar">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_below">@id/txt_alert_station</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <!-- specific line graphic -->
    <style name="stationLineLine">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>
