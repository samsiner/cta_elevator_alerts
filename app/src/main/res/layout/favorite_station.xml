<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_layout_favorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@drawable/border_bottom">

        <ImageView
            android:id="@+id/img_favorite_station"
            style="@style/StatusImage"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image_elevator_out"/>

        <TextView
            android:id="@+id/txt_nickname_favorite_station"
            style="@style/FavoriteNickname"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_favorite_station"
            android:layout_toRightOf="@id/img_favorite_station"
            android:text="@string/title_nickname" />

        <TextView
            android:id="@+id/txt_name_favorite_station"
            style="@style/StationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_favorite_station"
            android:layout_toRightOf="@id/img_favorite_station"
            android:layout_below="@+id/txt_nickname_favorite_station"
            android:layout_marginTop="3dp"
            android:text="@string/title_station" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/icon_edit_remove"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Edit or Remove Icon"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>