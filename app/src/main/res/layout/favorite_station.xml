<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_layout_favorites"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/border_bottom"
        >

        <ImageView
            android:id="@+id/img_favorite_station"
            style="@style/StatusImage"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image_elevator_out" />

        <TextView
            android:id="@+id/txt_nickname_favorite_station"
            style="@style/FavoriteNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/img_favorite_station"
            android:layout_toRightOf="@id/img_favorite_station" />

        <TextView
            android:id="@+id/txt_name_favorite_station"
            style="@style/StationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_below="@+id/txt_nickname_favorite_station"
            android:layout_toEndOf="@id/img_favorite_station"
            android:layout_toRightOf="@id/img_favorite_station" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignRight="@id/txt_nickname_favorite_station"
            android:layout_alignEnd="@id/txt_nickname_favorite_station"
            android:clickable="true"
            android:contentDescription="@string/content_description_edit_remove_icon"
            android:focusable="true"
            android:src="@drawable/icon_burger" />

        <View
            android:id="@+id/favorite_line_0"
            android:layout_below="@id/txt_name_favorite_station"
            android:layout_toEndOf="@id/img_favorite_station"
            android:layout_toRightOf="@+id/img_favorite_station"
            style="@style/FavoriteLineBar"

            />

        <View
            android:id="@+id/favorite_line_1"
            android:layout_below="@id/txt_name_favorite_station"
            android:layout_toEndOf="@id/favorite_line_0"
            android:layout_toRightOf="@id/favorite_line_0"
            style="@style/FavoriteLineBar"
            />

        <View
            android:id="@+id/favorite_line_2"
            android:layout_below="@id/txt_name_favorite_station"
            android:layout_toEndOf="@id/favorite_line_1"
            android:layout_toRightOf="@+id/favorite_line_1"
            style="@style/FavoriteLineBar"
            />

        <View
            android:id="@+id/favorite_line_3"
            android:layout_below="@id/txt_name_favorite_station"
            android:layout_toEndOf="@id/favorite_line_2"
            android:layout_toRightOf="@+id/favorite_line_2"
            style="@style/FavoriteLineBar"
            />

        <View
            android:id="@+id/favorite_line_4"
            android:layout_below="@id/txt_name_favorite_station"
            android:layout_toEndOf="@id/favorite_line_3"
            android:layout_toRightOf="@+id/favorite_line_3"
            style="@style/FavoriteLineBar"
            />

        <View
            android:id="@+id/favorite_line_5"
            android:layout_below="@id/txt_name_favorite_station"
            android:layout_toEndOf="@id/favorite_line_4"
            android:layout_toRightOf="@+id/favorite_line_4"
            style="@style/FavoriteLineBar"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>