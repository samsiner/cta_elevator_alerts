<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <!-- bottom layout -->
    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal">

        <RelativeLayout
        android:id="@+id/rl_edit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        >

        <ImageView
            style="@style/icon_edit_delete"
            android:src="@drawable/edit"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorRedLine"
        android:orientation="vertical"
        >

        <ImageView
            style="@style/icon_edit_delete"
            android:src="@drawable/trash"
            />
    </RelativeLayout>

    </LinearLayout>

    <!-- top layout -->
    <RelativeLayout
        android:id="@+id/relative_layout_favorites"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/border_bottom"
        >

        <ImageView
            android:id="@+id/img_favorite_station"
            style="@style/StatusImage"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image_elevator_out" />

        <TextView
            android:id="@+id/txt_nickname_favorite_station"
            style="@style/FavoriteNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/img_favorite_station"
            android:layout_toRightOf="@id/img_favorite_station" />

        <TextView
            android:id="@+id/txt_name_favorite_station"
            style="@style/StationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_below="@+id/txt_nickname_favorite_station"
            android:layout_toEndOf="@id/img_favorite_station"
            android:layout_toRightOf="@id/img_favorite_station" />

        <RelativeLayout
            android:id="@+id/rl_hamburger"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:focusable="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/content_description_edit_remove_icon"
                android:src="@drawable/icon_burger"
                />
        </RelativeLayout>

        <View
            android:id="@+id/favorite_line_0"
            android:layout_below="@id/txt_name_favorite_station"
            android:layout_toEndOf="@id/img_favorite_station"
            android:layout_toRightOf="@+id/img_favorite_station"
            style="@style/FavoriteLineBar"
            />

        <View
            android:id="@+id/favorite_line_1"
            android:layout_below="@id/txt_name_favorite_station"
            android:layout_toEndOf="@id/favorite_line_0"
            android:layout_toRightOf="@id/favorite_line_0"
            style="@style/FavoriteLineBar"
            />

        <View
            android:id="@+id/favorite_line_2"
            android:layout_below="@id/txt_name_favorite_station"
            android:layout_toEndOf="@id/favorite_line_1"
            android:layout_toRightOf="@+id/favorite_line_1"
            style="@style/FavoriteLineBar"
            />

        <View
            android:id="@+id/favorite_line_3"
            android:layout_below="@id/txt_name_favorite_station"
            android:layout_toEndOf="@id/favorite_line_2"
            android:layout_toRightOf="@+id/favorite_line_2"
            style="@style/FavoriteLineBar"
            />

        <View
            android:id="@+id/favorite_line_4"
            android:layout_below="@id/txt_name_favorite_station"
            android:layout_toEndOf="@id/favorite_line_3"
            android:layout_toRightOf="@+id/favorite_line_3"
            style="@style/FavoriteLineBar"
            />

        <View
            android:id="@+id/favorite_line_5"
            android:layout_below="@id/txt_name_favorite_station"
            android:layout_toEndOf="@id/favorite_line_4"
            android:layout_toRightOf="@+id/favorite_line_4"
            style="@style/FavoriteLineBar"
            />

    </RelativeLayout>



</com.daimajia.swipe.SwipeLayout>