<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <ImageView
            android:id="@+id/img_alert_station"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:contentDescription="@string/image_elevator_out"/>

        <TextView
            android:id="@+id/txt_alert_station"
            style="@style/StationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/image_elev_status"
            android:layout_toRightOf="@id/image_elev_status" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>