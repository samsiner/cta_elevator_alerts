<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/img_alert_station"
            style="@style/StatusImage"
            android:layout_centerVertical="true"
            android:background="@drawable/status_red"
            android:contentDescription="@string/image_elevator_out"/>

        <TextView
            android:id="@+id/txt_alert_station"
            style="@style/StationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_alert_station"
            android:layout_toRightOf="@id/img_alert_station"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>